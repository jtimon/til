mode test

// Bug #50: Nested functions accessing outer scope variables (closures)
// This should fail with a todo_error saying closures are not supported yet.

test_closure := proc() {
    outer_var := 42

    inner := func() returns I64 {
        return outer_var  // Uses variable from outer scope - NOT SUPPORTED
    }

    result := inner()
    assert_eq(loc(), 42, result)
}
test_closure()
