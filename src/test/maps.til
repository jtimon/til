// Test position() method
test_map_position := proc() {
    mut colors := Map.new("Str", size_of(Str), "I64", size_of(I64))
    colors.insert("red", 1)
    colors.insert("green", 2)
    colors.insert("blue", 3)

    test(loc(), colors.position("red").eq(0), "red should be at position 0")
    test(loc(), colors.position("green").eq(1), "green should be at position 1")
    test(loc(), colors.position("blue").eq(2), "blue should be at position 2")

    mut pos := colors.position("yellow")
    test(loc(), pos.eq(sub(0, 1)), "non-existent key should return -1")

    colors.delete()
    catch (err: AllocError) { exit(1) }
    catch (err: DuplicatedKeyError) { exit(1) }
}

