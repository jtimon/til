// Test nested data structures
Point := struct {
    mut x: I64 = 0
    mut y: I64 = 0

    new := func(x: I64, y: I64) returns Point {
        mut self := Point()
        self.x = x
        self.y = y
        return self
    }
}

// Identical and equivalent to Point.new(x, y)
point_new := func(x: I64, y: I64) returns Point {
    mut self := Point()
    self.x = x
    self.y = y
    return self
}

