            case NodeType.StructDef(struct_def):
                // Struct methods - use mangled names (StructName_methodName)
                struct_name := decl.name
                for entry: MapEntry in struct_def.default_values.entries() {
                    member_name := entry.key
                    default_expr := entry.value
                    switch default_expr.node_type {
                    case NodeType.FuncDef(func_def):
                        mangled_name := Str.concat(struct_name, "_", member_name)
                        // Check for variadic args (TMulti) in struct methods
                        mut idx := 0
                        for arg: Declaration in func_def.args {
                            switch arg.value_type {
                            case ValueType.TMulti(elem_type):
                                info := VariadicParamInfo()
                                info.elem_type = elem_type.clone()
                                info.regular_count = idx
                                ctx.func_variadic_args.insert(mangled_name.clone(), info)
                                break
                            case:
                            }
                            idx.inc()
                        }
                    case:
                    }
                }
            case:
            }
        }
    case:
    }

    catch (err: IndexOutOfBoundsError) {
