/// Check if a type has a delete() method AND clear ownership semantics
/// Note: Ptr is excluded because Ptr.offset() returns non-owning pointers
/// DISABLED: Pre-existing double-free bug needs investigation (Issue #117)
type_has_delete := func(_type_name: Str) returns Bool {
    // Types with delete() method AND clear allocation/ownership semantics
    // DISABLED until double-free bug is fixed
    return false
}

/// Get the type name from a ValueType, returning empty string for non-custom types
get_deletable_type_name := func(value_type: ValueType) returns Str {
    switch value_type {
    case ValueType.TCustom(name):
        return name
    case:
        return ""
    }
}

/// Variable lifetime tracking for ASAP destruction
VarLifetime := struct {
    mut name: Str = ""
    mut value_type: ValueType = ValueType.TCustom("")
    mut last_use_stmt_idx: I64 = 0  // -1 means never used
}

/// Collect all variable names used in an expression (for liveness analysis)
collect_var_uses := proc(e: Expr, mut uses: Set) throws Str {
    switch e.node_type {
    case NodeType.Identifier(name):
        // Skip type-qualified access (Type.method) by checking if first char is uppercase
        if name.len().gt(0) {
            first_char := get_char(name, 0)?
            if not(is_uppercase(first_char)) {
                _ := uses.insert(name)
            }
        }
        // Also collect from nested params (field access, etc)
        for param: Expr in e.params {
            collect_var_uses(param, uses)?
        }
    case NodeType.Assignment(name):
        _ := uses.insert(name)
        for param: Expr in e.params {
            collect_var_uses(param, uses)?
        }
    case NodeType.FCall(_):
        // First param is function name/path, collect vars from there and all args
        for param: Expr in e.params {
            collect_var_uses(param, uses)?
        }
    case:
        for param: Expr in e.params {
            collect_var_uses(param, uses)?
        }
    }

    catch (err: IndexOutOfBoundsError) {
        throw format("collect_var_uses: ", err.msg)
    }
}

/// Collect variables that are returned (ownership transferred to caller)
collect_returned_vars := proc(stmts: Vec) returns Set throws Str {
    mut returned := Set.new(Str)

    for stmt: Expr in stmts {
        collect_returned_vars_in_expr(stmt, returned)?
    }

    return returned
}

collect_returned_vars_in_expr := proc(e: Expr, mut returned: Set) throws Str {
    switch e.node_type {
    case NodeType.Return:
        // Variables directly returned transfer ownership
        if e.params.len().gt(0) {
            first_param := e.get(0)?
            switch first_param.node_type {
            case NodeType.Identifier(name):
                // Only simple identifiers (not field access)
                if first_param.params.len().eq(0) {
                    _ := returned.insert(name)
                }
            case:
            }
        }
    case NodeType.FuncDef(_):
        // Don't recurse into nested function definitions
    case:
        for param: Expr in e.params {
            collect_returned_vars_in_expr(param, returned)?
        }
    }
}

/// Analyze liveness of deletable variables in a statement list
analyze_var_lifetimes := proc(stmts: Vec, _context: Context) returns Vec throws Str {
    mut lifetimes := Vec.new(VarLifetime)

    // Collect variables that are returned (ownership transferred to caller)
    returned_vars := collect_returned_vars(stmts)?

    // First pass: collect all local variable declarations with delete() types
    for stmt: Expr in stmts {
        switch stmt.node_type {
        case NodeType.Declaration(decl):
            // Don't auto-delete variables that are returned
            if returned_vars.contains(decl.name) {
                continue
            }
            type_name := get_deletable_type_name(decl.value_type)
            if type_name.len().gt(0) {
                if type_has_delete(type_name) {
                    neg_one := sub(0, 1)
                    new_lifetime := VarLifetime(name=decl.name, value_type=decl.value_type, last_use_stmt_idx=neg_one)
                    lifetimes.push(new_lifetime)
                }
            }
        case:
        }
    }

    // Second pass: find last use of each deletable variable
    mut stmt_idx := 0
    for stmt: Expr in stmts {
        mut uses := Set.new(Str)
        collect_var_uses(stmt, uses)?

        mut j := 0
        while j.lt(lifetimes.len()) {
            mut lt := VarLifetime()
            lifetimes.get(j, lt)?
            if uses.contains(lt.name) {
                lt.last_use_stmt_idx = stmt_idx
                lifetimes.set(j, lt)?
            }
            j.inc()
        }

        stmt_idx.inc()
    }

    catch (err: IndexOutOfBoundsError) {
        throw format("analyze_var_lifetimes: ", err.msg)
    }

    return lifetimes
}

/// Create a delete() method call expression for a variable
create_delete_call := proc(var_name: Str, value_type: ValueType, template_expr: Expr) returns Expr {
    type_name := get_deletable_type_name(value_type)
    if type_name.len().eq(0) {
        return template_expr.clone()
    }

    // Create: Type.delete(var)
    // After UFCS resolution, FCall structure is: [func_name_expr, arg1, arg2, ...]
    // func_name_expr is an Identifier with the full name like "Vec.delete"

    method_name := format(type_name, ".delete")
    func_name_expr := Expr.new_clone(NodeType.Identifier(method_name), template_expr, Vec.new(Expr))

    var_expr := Expr.new_clone(NodeType.Identifier(var_name), template_expr, Vec.new(Expr))

    mut params := Vec.new(Expr)
    params.push(func_name_expr)
    params.push(var_expr)

    // FCall(bool) - bool indicates if call has '?' suffix (Issue #132)
    // delete() is not a throwing function, so false
    return Expr.new_clone(NodeType.FCall(false), template_expr, params)
}

/// Insert ASAP delete calls into a statement list
insert_asap_deletes := proc(stmts: Vec, context: Context) returns Vec throws Str {
    if stmts.len().eq(0) {
        return stmts
    }

    lifetimes := analyze_var_lifetimes(stmts, context)?

    if lifetimes.len().eq(0) {
        return stmts // No deletable variables
    }

    mut result := Vec.new(Expr)
    // Clone first statement as template for location info
    mut template_expr := Expr()
    stmts.get(0, template_expr)?

    mut stmt_idx := 0
    for stmt: Expr in stmts {
        result.push(stmt)

        // After this statement, emit delete for any variable whose last use was here
        mut idx := 0
        while idx.lt(lifetimes.len()) {
            mut lt := VarLifetime()
            lifetimes.get(idx, lt)?
            if lt.last_use_stmt_idx.eq(stmt_idx) {
                del_call := create_delete_call(lt.name, lt.value_type, template_expr)
                result.push(del_call)
            }
            idx.inc()
        }

        stmt_idx.inc()
    }

    // Safety net: delete any variables that were never used (last_use_stmt_idx is -1)
    // Delete in reverse order (LIFO like C++/Rust)
    mut k := lifetimes.len().sub(1)
    while k.gteq(0) {
        mut lt2 := VarLifetime()
        lifetimes.get(k, lt2)?
        if lt2.last_use_stmt_idx.eq(sub(0, 1)) {
            unused_del_call := create_delete_call(lt2.name, lt2.value_type, template_expr)
            result.push(unused_del_call)
        }
        k.dec()
    }

    catch (err: IndexOutOfBoundsError) {
        throw format("insert_asap_deletes: ", err.msg)
    }

    return result
}
